{% extends "layout.html.twig" %}
{% from "macros.html.twig" import input, select  %}

{% block cssContent %}
{% endblock cssContent %}

{% block content %}

<div class="row">
  <div class="col s12 m10 l8 offset-m1 offset-l2">
    <div class="card-panel hoverable ">
      <div class="row">
        {{ form_start(perfilForm)}}
          
          <div class="col s12 m12 l5 center-align">
            <div class="col s12 center-align">
              {% if usuario.avatar %}
              <img id="imgEdit" src="{{ asset('images/' ~ usuario.avatar) }}"
                class="circle responsive-img" style="height:150px; width: 150px;" />
              {% else %}
              <img id="imgEdit" src="{{ asset('images/default.png') }}"
                class="circle responsive-img" style="height:150px; width: 150px;" />
              {% endif %}
            </div>
            <label for="profile_form_avatar" class="btn waves-effect waves-light light-blue accent-4"><i
                class="material-icons left">camera_alt</i>Cambiar</label>
            <div class="col s12 center-align">
              <div class="file-field input-field">
                <div class="file-path-wrapper">
                  {{ form_widget(perfilForm.avatar) }}
                </div>
              </div>
            </div>
          </div>

          <div class="col s12 m12 l7">
            {{ input(perfilForm.first_name, 'person', '', false) }}
            {{ input(perfilForm.last_name, 'person', '', false) }}
            {{ input(perfilForm.email, 'mail_outline') }}
          </div>

          <div class="col s12 m12 l12">
            {{ select(perfilForm.gender, 'wc', '', false, "margin-bottom: 23px; margin-top: 0px;") }}
            {{ input(perfilForm.location, 'person', '', false) }}
            <div class="input-field">
              <i class="material-icons prefix">info</i>
              {{ form_label(perfilForm.information) }}
              {{ form_widget(perfilForm.information, {'attr': {'class': 'materialize-textarea'}}) }}
            </div> 
            
            {#
            {% if perfilForm.avatar_file.errors %}
            {% for error in perfilForm.avatar_file.errors %}
            <p for="errorimage" class="active red-text text-darken-1" style="margin-top: -10px;"><i
                class="material-icons small" style="margin-right: 10px; margin-top: -10px">warning</i>
              {{ error }}</p>
            {% endfor %}
            {% endif %}#}

            <div class="row right-align">
              <div class="col s12" style="margin-bottom: -35px;">
                <a href="{{ path('user_profile') }}" class="btn waves-effect waves-light red darken-1">cancelar<i
                    class="material-icons right">cancel</i></a>
                <button type="submit" class="btn waves-effect waves-light light-blue accent-4">Guardar<i
                    class="material-icons right">save</i></button>
              </div>
            </div>
          </div>
          
        {{ form_end(perfilForm) }}
      </div>
    </div>
  </div>
</div>

{% endblock %}

{% block scriptsContent %}
{% endblock scriptsContent %}