{% extends "layout.html.twig" %}

{% block cssContent %}
{% endblock cssContent %}

{% block content %}

<div class="col s12 m12 l12">
  <ul class="collection with-header">
    <li class="collection-header">
      <h4 class="center">Ultimos post publicados</h4>
    </li>
    {% for post in post_list %}
    <li class="collection-item" style="font-size: 16pt;">
      <div style="max-height: 300px;overflow: hidden;">
        <span class="col s6 m6 l6">
          <a href="{{ path('post_view', {post_id: post.id}) }}">
            <h5>{{ post.title }}</h5>
          </a>
        </span>
        <span class="col s6 m6 l6 right-align">
          {{ post.postDate|date('d/m/Y h:i:s A') }}
          <br>Autor: {{ post.usuario.username }}
        </span>
        <span class="col s12 m12 l12">
          {{ post.postText|raw}}
        </span>
      </div>
    </li>
    {% endfor %}
  </ul>
</div>

{% endblock content %}

{% block scriptsContent %}
{% endblock scriptsContent %}